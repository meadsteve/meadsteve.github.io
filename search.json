---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "category": "{{ post.categories }}",
      "tags": "{{ post.tags | join: ', ' }}",
      "url": "{{ site.baseurl }}{{ post.url }}",
      "date": "{{ post.date }}",
      "content": "{{ post.content | strip_html | downcase | replace: ". ", " " | replace: '"', "'" | replace: "\", "" | split: " " | uniq | join: " "}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %},
  {% for kb in site.knowledgebase %}
    {
      "title": "{{ kb.title | escape }}",
      "category": "knowledgebase",
      "tags": "{{ kb.tags | join: ', ' }}",
      "url": "{{ site.baseurl }}{{ kb.url }}",
      "content": "{{ kb.content | strip_html | downcase | replace: ". ", " " | replace: '"', "'" | replace: "\", "" | split: " " | uniq | join: " "}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]